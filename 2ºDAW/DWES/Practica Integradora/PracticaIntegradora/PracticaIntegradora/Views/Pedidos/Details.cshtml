@model PracticaIntegradora.Models.Pedido

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles del Pedido</h1>

    <div class="card shadow-sm p-4">
        <h4>Pedido</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Confirmado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Confirmado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preparado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preparado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enviado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enviado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cobrado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cobrado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Devuelto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Devuelto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Anulado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Anulado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
    </div>
</div>
