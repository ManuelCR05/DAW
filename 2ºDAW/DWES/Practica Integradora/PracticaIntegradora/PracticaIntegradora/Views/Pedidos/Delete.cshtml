@model PracticaIntegradora.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Eliminar Pedido</h1>

    <div class="card shadow-sm p-4">
        <h3>¿Estás seguro de que deseas eliminar este pedido?</h3>
        <hr />

        <h4>Pedido</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Confirmado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Confirmado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preparado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preparado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enviado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enviado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cobrado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cobrado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Devuelto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Devuelto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Anulado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Anulado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
