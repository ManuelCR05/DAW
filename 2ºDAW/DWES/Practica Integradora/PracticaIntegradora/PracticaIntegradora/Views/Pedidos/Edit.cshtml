@model PracticaIntegradora.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Editar Pedido</h1>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Fecha" class="form-label">Fecha</label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Confirmado" class="form-label">Confirmado</label>
                <input asp-for="Confirmado" class="form-control" />
                <span asp-validation-for="Confirmado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Preparado" class="form-label">Preparado</label>
                <input asp-for="Preparado" class="form-control" />
                <span asp-validation-for="Preparado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Enviado" class="form-label">Enviado</label>
                <input asp-for="Enviado" class="form-control" />
                <span asp-validation-for="Enviado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cobrado" class="form-label">Cobrado</label>
                <input asp-for="Cobrado" class="form-control" />
                <span asp-validation-for="Cobrado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Devuelto" class="form-label">Devuelto</label>
                <input asp-for="Devuelto" class="form-control" />
                <span asp-validation-for="Devuelto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Anulado" class="form-label">Anulado</label>
                <input asp-for="Anulado" class="form-control" />
                <span asp-validation-for="Anulado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoId" class="form-label">Estado</label>
                <select asp-for="EstadoId" class="form-select" asp-items="ViewBag.EstadoId"></select>
                <span asp-validation-for="EstadoId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
