@model IEnumerable<PracticaIntegradora.Models.ViewUsuarioConRol>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h1 class="text-center mb-4">Usuarios</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary text-white">
            <i class="fas fa-user-plus"></i> Nuevo Administrador
        </a>
    </div>

    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label fw-bold">Nombre usuario:</label>
                <input type="text" name="strCadenaBusqueda"
                       value="@ViewData["BusquedaActual"]" class="form-control"
                       placeholder="Buscar usuario..." />
            </div>
            <div class="col-md-6 text-end">
                <input type="submit" value="Buscar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Lista completa</a>
            </div>
        </div>
    </form>

    <div class="table-responsive mt-4 shadow-sm rounded">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Usuario</th>
                    <th>Nombre de Usuario</th>
                    <th>Rol</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.RolDeUsuario)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
