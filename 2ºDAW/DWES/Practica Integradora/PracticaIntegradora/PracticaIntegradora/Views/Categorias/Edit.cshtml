@model PracticaIntegradora.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container py-4">
    <h1 class="text-center mb-4">Editar Categoría</h1>

    <div class="card shadow-lg rounded">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary text-white">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}